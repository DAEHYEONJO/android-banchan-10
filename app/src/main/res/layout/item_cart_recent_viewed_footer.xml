<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_scale_surface"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/cart_recent_viewed_footer_tv_recently_hard_code"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/item_cart_recently_viewed"
        android:layout_marginStart="@dimen/base_space_16dp"
        android:layout_marginTop="48dp"
        style="@style/Widget.TextView.KoPubWorldDotumPro_GreyScaleBlack16_Bold.Style"/>

    <TextView
        android:id="@+id/cart_recent_viewed_footer_tv_recently_show_total"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base_24dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/cart_recent_viewed_footer_tv_recently_hard_code"
        app:layout_constraintBottom_toBottomOf="@+id/cart_recent_viewed_footer_tv_recently_hard_code"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/base_space_16dp"
        android:text="@string/item_cart_recently_viewed_show_total"
        style="@style/Widget.TextView.NotoSansKR_GreyScaleBlack12_Normal.Style"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_recent_viewed_footer_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_space_16dp"
        android:layout_marginBottom="@dimen/base_space_40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cart_recent_viewed_footer_tv_recently_hard_code"/>



</androidx.constraintlayout.widget.ConstraintLayout>