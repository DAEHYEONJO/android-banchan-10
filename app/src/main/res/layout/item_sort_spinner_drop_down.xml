<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/sort_spinner_drop_down_tv"
        android:layout_width="89dp"
        android:layout_height="@dimen/base_text_space_24dp"
        android:layout_marginStart="@dimen/base_space_16dp"
        android:layout_marginTop="@dimen/rv_space_8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.TextView.NotoSansKR_GreyScaleBlack14_Normal.Style"
        android:gravity="center_vertical"
        android:text="기본 정렬순"/>
    <ImageView
        android:id="@+id/sort_spinner_drop_down_iv"
        android:layout_width="@dimen/base_text_space_24dp"
        android:layout_height="@dimen/base_text_space_24dp"
        app:layout_constraintTop_toTopOf="@+id/sort_spinner_drop_down_tv"
        app:layout_constraintBottom_toBottomOf="@+id/sort_spinner_drop_down_tv"
        app:layout_constraintStart_toEndOf="@+id/sort_spinner_drop_down_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/base_space_16dp"
        android:src="@drawable/ic_sorted_spinner_selected"/>

</androidx.constraintlayout.widget.ConstraintLayout>