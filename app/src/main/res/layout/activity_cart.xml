<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.woowahan.android10.deliverbanchan.presentation.cart.CartViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey_scale_surface"
        tools:context=".presentation.cart.CartActivity">

        <include
            android:id="@+id/cart_abl"
            app:vm = "@{vm}"
            layout="@layout/layout_app_bar_with_back_btn"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/cart_fcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</layout>