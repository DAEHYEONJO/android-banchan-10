<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.woowahan.android10.deliverbanchan.presentation.order.OrderViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.cart.OrderActivity">

        <include
            android:id="@+id/order_abl"
            app:vmOrder = "@{vm}"
            layout="@layout/layout_app_bar_with_back_btn"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/order_fcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</layout>